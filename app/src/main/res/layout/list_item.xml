<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:useDefaultMargins="true">

    <ImageView
        android:id="@+id/pageStateImageView"
        android:layout_width="@dimen/image_side_length"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:contentDescription=""
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_not_active_black_24dp"/>

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:columnCount="3"
        android:orientation="vertical"
        android:rowCount="1"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/pageNameTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:gravity="center"
            android:paddingLeft="@dimen/button_margin"
            android:paddingRight="@dimen/button_margin"
            android:text="@string/list_item_test_text"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </GridLayout>

    <ImageButton
        android:id="@+id/moreImageButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_more_horiz_black_24dp"/>


    <Switch
        android:id="@+id/pageStateSwitch"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:scaleType="fitCenter"/>

</LinearLayout>